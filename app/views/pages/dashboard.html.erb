
<% if current_user.ta %>
  <h2 class = "d-flex justify-content-center">Offers</h2>
  <div class="container d-flex justify-content-center align-items-center ">
    <% @offers.each do |offer|%>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= offer.specialty%></h5>
        <p class="card-text"><%= offer.price%></p>
          <p class="card-text"><%= offer.available%></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
    <% end %>
    <div class="container d-flex justify-content-center align-items-center">
      <% @offer.bookings.each do |booking| %>
      <%= booking.start_date %>
      <%= booking.user.first_name %>
      <%= link_to "accept", accept_booking_path(booking), data: {turbo_method: :patch}  %>
      <%= link_to "decline", decline_booking_path(booking), data: {turbo_method: :patch}  %>
      <% end %>
    </div>
  </div>
  <%= link_to 'Create a new offer', new_offer_path, class: 'btn btn-primary' %>
<% end %>

<h2 class = "d-flex justify-content-center">bookings</h2>
<div class="container d-flex justify-content-center align-items-center">
  <% @bookings.each do |booking|%>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= booking.start_date%></h5>
      <p class="card-text"><%= booking.confirmation%></p>
      <p class="card-text">user email:<%= booking.user.email%></p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
  <% end %>
</div>
